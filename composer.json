{
  "name": "replantadev/dniwoo",
  "description": "Professional DNI/NIF field for WooCommerce checkout with validation for Spain and Portugal",
  "type": "wordpress-plugin",
  "keywords": [
    "wordpress",
    "woocommerce",
    "dni",
    "nif",
    "nie",
    "cif",
    "validation",
    "spain",
    "portugal",
    "checkout",
    "ecommerce"
  ],
  "homepage": "https://github.com/replantadev/dniwoo",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "Replanta",
      "email": "hello@replanta.es",
      "homepage": "https://replanta.es",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://github.com/replantadev/dniwoo/issues",
    "source": "https://github.com/replantadev/dniwoo",
    "docs": "https://github.com/replantadev/dniwoo/wiki",
    "email": "support@replanta.es"
  },
  "require": {
    "php": ">=7.4",
    "composer/installers": "^1.0 || ^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "squizlabs/php_codesniffer": "^3.5",
    "wp-coding-standards/wpcs": "^2.3",
    "phpstan/phpstan": "^1.0",
    "phpcompatibility/php-compatibility": "^9.3"
  },
  "autoload": {
    "psr-4": {
      "DNIWOO\\": "includes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DNIWOO\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "phpcs": "phpcs --standard=WordPress --extensions=php --ignore=vendor/ .",
    "phpcbf": "phpcbf --standard=WordPress --extensions=php --ignore=vendor/ .",
    "phpstan": "phpstan analyse --level=8 includes/",
    "compatibility": "phpcs --standard=PHPCompatibility --runtime-set testVersion 7.4- --extensions=php --ignore=vendor/ .",
    "check": [
      "@phpcs",
      "@phpstan",
      "@compatibility",
      "@test"
    ],
    "fix": "@phpcbf"
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "extra": {
    "installer-name": "dniwoo",
    "wordpress-install-dir": "wp-content/plugins/dniwoo"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
